&HEAD CHID='spheres' /
&MESH IJK=6,6,6 XB=0.,4.0,0.,3.,0.,2. /
&TIME T_END=1.0 /

&SURF ID='C0' COLOR='RED' /
&SURF ID='C1' COLOR='GREEN' /
&SURF ID='C2', COLOR='BLUE' /

&GEOM ID='x-sphere' SURF_ID='C0' SPHERE_ORIGIN=0.5,0.,0. SPHERE_RADIUS=.5 /
&GEOM ID='y-sphere' SURF_ID='C1' SPHERE_ORIGIN=0.,0.5,0. SPHERE_RADIUS=.5 /
&GEOM ID='z-sphere' SURF_ID='C2' SPHERE_ORIGIN=0.,0.,0.5 SPHERE_RADIUS=.5 /

&MOVE ID='RotSphere', AXIS=0.,0.,1., ROTATION_ANGLE=30. /
&GEOM ID='rot-sphere' SURF_ID='C0' MOVE_ID='RotSphere'
      SPHERE_ORIGIN=0.,0.,3. SPHERE_RADIUS=1. /

&TAIL /
