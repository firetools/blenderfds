&HEAD CHID='cylinders' /
&MESH IJK=6,6,6 XB=0.,4.0,0.,3.,0.,2. /
&TIME T_END=1.0 /

&SURF ID='C0' COLOR='RED' /
&SURF ID='C1' COLOR='GREEN' /
&SURF ID='C2', COLOR='BLUE' /

&GEOM ID='x-cylinder' SURF_ID='C0' CYLINDER_ORIGIN=0.5,0.,0. CYLINDER_RADIUS=.5 CYLINDER_LENGTH=1. CYLINDER_AXIS=1.,0.,0. /
&GEOM ID='y-cylinder' SURF_ID='C1' CYLINDER_ORIGIN=0.,0.5,0. CYLINDER_RADIUS=.5 CYLINDER_LENGTH=1. CYLINDER_AXIS=0.,1.,0. /
&GEOM ID='z-cylinder' SURF_ID='C2' CYLINDER_ORIGIN=0.,0.,0.5 CYLINDER_RADIUS=.5 CYLINDER_LENGTH=1. CYLINDER_AXIS=0.,0.,1. /

&MOVE ID='RotCyl', AXIS=0.,0.,1., ROTATION_ANGLE=30 /
&GEOM ID='rot-cylinder' SURF_IDS='C0','C1','C2' MOVE_ID='RotCyl'
      CYLINDER_LENGTH=4., CYLINDER_RADIUS=.5, CYLINDER_ORIGIN=0.,0.,3., 
      CYLINDER_AXIS=1.,1.,0. / 

&TAIL /
